{
  "name": "slamby-website",
  "version": "1.0.0",
  "description": "Slamby website using angular2, aot, rollup, bootstrap and others.",
  "main": "src/app/main.ts",
  "scripts": {
    "start": "npm run express",
    "express": "node server",
    "clean": "gulp clean-up",
    "ngc": "ngc -p tsconfig.aot.json",
    "prepare": "gulp clean-tmp && gulp clean-build && gulp prepare-tmp && gulp prepare-build && gulp pug-compile && gulp sass-compile",
    "webpack:dev": "webpack --watch --progress",
    "rollup:aot": "rollup -f iife -c rollup.config.aot.js",
    "es5-convert": "tsc --target es5 --allowJs build/bundle.es2015.js --out build/bundle.js",
    "minify": "uglifyjs build/bundle.js --screw-ie8 --compress --mangle --output build/bundle.min.js",
    "build:developer": "npm run prepare && concurrently \"npm run webpack:dev\" \"npm run express\" \"gulp developer:watch\"",
    "build:aot": "npm run prepare && npm run ngc && npm run rollup:aot && npm run es5-convert && npm run minify",
    "build:production": "npm run build:aot && gulp imagemin && gulp clean-tmp"
  },
  "author": "Peter Mezei",
  "license": "Apache-2.0",
  "devDependencies": {
    "@angular/common": "2.2.3",
    "@angular/compiler": "2.2.3",
    "@angular/compiler-cli": "2.2.3",
    "@angular/core": "2.2.3",
    "@angular/platform-browser": "2.2.3",
    "@angular/platform-browser-dynamic": "2.2.3",
    "@angular/platform-server": "2.2.3",
    "@angular/router": "3.0.0",
    "@types/node": "^6.0.52",
    "angular2-template-loader": "^0.6.0",
    "angulartics2": "^1.6.1",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "bootstrap-sass": "^3.3.7",
    "browser-sync": "^2.18.5",
    "browser-sync-webpack-plugin": "^1.1.3",
    "concurrently": "^3.1.0",
    "del": "^2.2.2",
    "es6-shim": "^0.35.2",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-imagemin": "^3.1.1",
    "gulp-pug": "^3.2.0",
    "gulp-sass": "^3.0.0",
    "imagemin-jpeg-recompress": "^5.1.0",
    "imagemin-optipng": "^5.2.1",
    "jstransformer-markdown": "^1.1.1",
    "ng2-meta": "^2.0.3",
    "node-sass": "^4.0.0",
    "pngquant": "^1.1.1",
    "pug": "^2.0.0-beta6",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "^0.1.8",
    "rollup": "^0.37.0",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-angular": "^0.4.3",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-watch-angular": "^2.5.2",
    "rxjs": "^5.0.0-rc.4",
    "rxjs-es": "^5.0.0-beta.12",
    "ts-loader": "^1.3.2",
    "typescript": "2.0.6",
    "uglify": "^0.1.5",
    "uglifyjs": "^2.4.10",
    "webpack": "2.1.0-beta.27",
    "zone.js": "^0.7.2"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "connect": "^3.5.0",
    "express": "^4.14.0",
    "glob": "^7.1.1",
    "http": "0.0.0",
    "path": "^0.12.7"
  }
}
