{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "experimentalDecorators": true
    },
    "awesomeTypescriptLoaderOptions": {
        "typeRoots": [ "./node_modules/@types" ],
        "types": [
            "node"
        ],
        "files": [
            "main.ts"
        ]
    }
}